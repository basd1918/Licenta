<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCheltuieliApartament"
    android:background="#DDDEEE">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/butonDialogInfoCheltApartament"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/info_icon"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#E13464AD"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginRight="30dp"/>


        <TextView
            android:id="@+id/textViewAn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:padding="10dp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheltuieli pe apartament"
        android:textSize="22dp"
        android:textColor="#000"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectați numărul apartamentului:"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_horizontal">

           <Button
               android:id="@+id/buttonPrev"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:textSize="18sp"
               android:layout_marginRight="5dp"
               android:padding="5dp"
               android:background="@drawable/prev_icon" />
           <TextView
               android:id="@+id/textViewNrApartament"
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:background="#fff"
               android:ems="10"
               android:hint="Ap"
               android:textAlignment="center"
               android:inputType="number"
               android:padding="10dp" />
           <Button
               android:id="@+id/buttonNext"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:textSize="18sp"
               android:padding="5dp"
               android:layout_marginLeft="5dp"
               android:background="@drawable/next_icon"/>
       </LinearLayout>
        <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="vezi Detalii"
            android:textStyle="bold"
            android:textColor="#E13464AD"
            android:background="#00FFFFFF"/>
        <Button
            android:textColor="#E13464AD"
            android:visibility="gone"
            android:id="@+id/buttonAscunde"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" ascunde Detalii"
            android:background="#00FFFFFF"
            android:textStyle="bold" />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoare apometru(mc):"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/editTextApometru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:ems="10"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:inputType="numberDecimal"
            android:padding="10dp" />

    <Button
        android:id="@+id/buttonCalculeazaConsumApa"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="calculează consum apă"
        android:textStyle="bold"
        android:textColor="#E13464AD"
        android:background="#00673AB7"
        android:gravity="center" />
</LinearLayout>

        <LinearLayout
            android:background="#223464AD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/lynearLayoutNumeProprietarAp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Nume proprietar:"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textViewNumeProprietarAp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lynearLayoutSuprafataAp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Suprafață apartament:"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textViewSuprafataAp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lynearLayoutNumarPersoaneAp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Număr persoane:"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textViewNumarPersoaneAp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:padding="10dp" />
            </LinearLayout>

        </LinearLayout>






        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#2F8B83FC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
<LinearLayout
    android:id="@+id/lynearLayoutIndivizia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/border"
    android:visibility="visible">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Cheltuieli după cota Indiviză:"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textViewIndiviza"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="10dp" />
</LinearLayout>

        <LinearLayout
            android:id="@+id/lynearLayoutCheltNrPers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cheltuieli după nr. de persoane:"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textViewCheltuieliNrPers"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="10dp" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/lynearLayoutConsumApa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:gravity="center"
                android:visibility="visible">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Consum de apă:"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textViewConsumApa"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:padding="10dp" />
            </LinearLayout>

<LinearLayout
    android:id="@+id/lynearLayoutEnergieElectrica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:gravity="center"
    android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energie electrică:"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textViewEnergieElectrica"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="10dp" />
</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#B9515AF0"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#86FFD740"
                android:gravity="center">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Restanță:"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/textViewRestanta"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>



        <Button
            android:id="@+id/button_AddIntretinere"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="adaugă întreținere"
            android:textColor="#fff"
            android:background="#303F9F"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:layout_marginBottom="20dp" />
    </LinearLayout>


</LinearLayout>
</ScrollView>