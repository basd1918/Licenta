<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StergeActivity"
    android:background="@drawable/oras4">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/textView3Opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Șterge apartament"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="25sp"
        android:typeface="serif" />
    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/editText_numarAp3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Număr apartament"
        android:inputType="number"
        android:textAllCaps="false"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editText_numeProprietar3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Nume proprietar"
        android:inputType="text"
        android:typeface="serif" />


    <Button
        android:id="@+id/buttonDelete3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Șterge"
        android:typeface="serif" />
</LinearLayout>

</ScrollView>